<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/headerMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/calMonth">

            <ImageButton
                android:id="@+id/ib_prev"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_arrow_left_24"
                android:scaleType="fitXY"
                android:background="@null"/>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="జనవరి - 2018"
                    android:layout_marginTop="-10dp"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/Ib_next"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_arrow_right_24"
                android:scaleType="fitXY"
                android:background="@null"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerMonth"
            android:orientation="vertical"
            android:background="@color/calDates">


            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-7dp">

                <TextView
                    android:id="@+id/TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="ఆది"
                    android:textColor="#ff005d"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="సోమ"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="మంగ"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="బుధ"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="గురు"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="శుక్ర"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:text="శని"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </TableRow>

        </LinearLayout>

        <GridView
            android:id="@+id/gv_calendar"
            android:layout_below="@+id/ll_calendar"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:nestedScrollingEnabled="true"
            android:gravity="center"
            android:background="@color/calDates"
            android:listSelector="@android:color/transparent"
            android:numColumns="7">
        </GridView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/calPan1">


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/calSunrise">

            <TextView
                android:id="@+id/sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="సూర్య గమనం"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="-7dp"
                android:textColor="@color/horoBg"/>
            <TextView
                android:id="@+id/moonrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="చంద్ర గమనం"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="-7dp"
                android:textColor="@color/horoBg"/>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/sunimage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/shubhasamayam"
            android:background="@color/calSunrise">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sun_moon"
                android:scaleType="fitXY"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/suntext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shubhasamayam"
            android:orientation="horizontal"
            android:background="@color/calSunrise">


            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sunriseT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00:01AM"
                    android:textColor="@color/horoBg"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/sunset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00:02PM"
                    android:textStyle="bold"
                    android:textColor="@color/horoBg"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/moonriseT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="00:03AM"
                    android:textStyle="bold"
                    android:textColor="@color/horoBg"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/moonset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/horoBg"
                    android:text="00:04PM"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

            </TableRow>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>